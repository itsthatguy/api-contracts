{
  "name": "proco",
  "version": "0.1.7",
  "description": "Suite of utilities for working with the API Contracts testing model.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "$(npm bin)/jest",
    "prepublishOnly": "npm run compile",
    "watch": "npm run compile -- --watch",
    "clean": "rm -rf ./dist",
    "compile": "npm run clean && $(npm bin)/tsc --project tsconfig.json --declaration"
  },
  "bin": {
    "proco": "./dist/bin/proco"
  },
  "author": "Kevin Altman <kevin@itsthatguy.com>",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^1.7.0",
    "colors": "^1.1.2",
    "fs-extra": "^4.0.1",
    "json-schema-faker": "^0.5.0-rc10",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@types/colors": "^1.1.3",
    "@types/glob": "^5.0.32",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "@types/yargs": "^8.0.2",
    "jest": "^20.0.4",
    "strip-color": "^0.1.0",
    "ts-jest": "^21.0.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/__tests__/test-setup.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!dist/",
      "!src/bin/**/*.ts"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "dist/",
      "node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
